{
  "name": "@compomint/core",
  "version": "0.1.0",
  "description": "A lightweight JavaScript component engine for building web applications with a focus on component-based architecture and template system.",
  "main": "dist/compomint.js",
  "module": "dist/compomint.esm.js",
  "type": "module",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/compomint.d.ts",
      "import": "./dist/compomint.esm.js",
      "require": "./dist/compomint.js"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "prepare": "npm run build:prod",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kurukona/compomint.git"
  },
  "keywords": [
    "template-engine",
    "template",
    "component-based",
    "component",
    "lightweight",
    "framework",
    "web-application",
    "spa",
    "templating",
    "frontend",
    "ui",
    "dom",
    "compomint"
  ],
  "author": "CHOI SUNGHO <wadolsh@gmail.com>",
  "homepage": "https://compomint.dev",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.3.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  }
}