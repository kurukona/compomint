{
  "compilerOptions": {
    "types": ["jest"],
    "target": "ES2016",
    "module": "ESNext",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/compomint.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "**/*.test.ts"
  ]
}
